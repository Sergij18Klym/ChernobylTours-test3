<div class="form-row">
  <div class="form-item">
    <label>Name</label>
    <input type="text" name="name" value="<%= driver.name %>">
  </div>
  <div class="form-item">
    <label>Phone</label>
    <input type="text" name="phone" value="<%= driver.phone %>">
  </div>
  <div class="form-item">
    <label>RentPrice</label>
    <input type="text" name="rentPrice" value="<%= driver.rentPrice %>">
  </div>
  <div class="form-item">
    <label>BusNumberPlate</label>
    <input type="text" name="numberPlate" value="<%= driver.bus.numberPlate %>">
  </div>
  <div class="form-item">
    <label>BusMark</label>
    <input type="text" name="mark" value="<%= driver.bus.mark %>">
  </div>
  <div class="form-item">
    <label>BusCapacity</label>
    <input type="number" name="capacity" value="<%= driver.bus.capacity %>">
  </div>
</div>